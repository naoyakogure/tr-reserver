<div class="text-center">
  <h1>研修予約</h1>
</div>

<div class="row">
  <div class="col-sm-6 offset-sm-3">

    <%= form_with(model: @reservation, local: true) do |f| %>
      <div class="form-group">
        <%= f.label :course, 'コース' %>
        <%= f.text_field :course, class: 'form-control' %>
      </div>
      
      <div class="form-group">
        <%= f.label :date, '日付    　　　　' %>
        <%= @reservation.date.to_s.to_date.strftime("%Y年%m月%d日") %>
      </div>

      <div class="form-group">
        <%= f.label :place, '研修室   　　　 ' %>
        <%= @reservation.place %>
      </div>
      
    　<div class="form-group">
        <%= f.label :remarks, '備考(２５０文字）' %>
        <%= f.text_area :remarks, class: 'form-control' ,rows: 5  %>
      </div>
      

      <%= f.submit '予約する', class: 'btn btn-primary btn-block' %>
      
    <% end %>
  </div>
</div>

<div class="text-center">
<%= link_to 'カレンダーに戻る', reservations_path %>
</div>