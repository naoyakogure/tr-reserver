<% if logged_in? %>
  <div class="text-center">
    <h1>研修予約</h1>
  </div>
  
  <div class="row">
    <div class="col-sm-6 offset-sm-3">
  
      <%= form_with(model: @reservation, local: true) do |f| %>
      
        <div class="form-group">
          <%= f.label :course, 'コース   　　　 ' %>
          <%= f.collection_select :course, Course.all, :name, :name, include_blank: true %>
        </div>
        
        <div class="form-group">
          <%= f.label :date, '日付    　　　　' %>
          <%= @date.to_s.to_date.strftime("%Y年%m月%d日") %>
          <%= f.hidden_field :date, :value =>@date %>
        </div>
  
        <div class="form-group">
          <%= f.label :place, '研修場   　　　 ' %>
          <%= @place %>
          <%= f.hidden_field :place, :value =>@place %>
        </div>
        
      　<div class="form-group">
          <%= f.label :remarks, '備考(２５０文字）' %>
          <%= f.text_area :remarks, class: 'form-control' ,rows: 5  %>
        </div>
        
        <%= f.hidden_field :user_id, :value =>current_user.id %>
        
        <%= f.submit '予約する', class: 'btn btn-primary btn-block' %>
        
      <% end %>
    </div>
  </div>
<% else %>
  <div class="center jumbotron">
    <div class="text-center">
      <h1>Welcome to the Microposts</h1>
      <%= link_to 'Sign up now!', signup_path, class: 'btn btn-lg btn-primary' %>
    </div>
  </div>
<% end %>